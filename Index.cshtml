@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section (Jumbotron đầu trang) -->
<marquee behavior="scroll" direction="left" class="bg-dark text-white py-2 font-weight-bold"> 💥 Chào mừng bạn đến với Phòng Gym của chúng tôi! Cùng luyện tập, nâng cao sức khỏe và chinh phục vóc dáng mơ ước! 💪 </marquee>
<div class="jumbotron jumbotron-fluid text-white position-relative overflow-hidden" style="background-image: url('https://dungcutheduc.vn/images/contents/fitness.jpg'); background-size: cover; background-position: center; height: 500px;">
    <div class="overlay" style="position:absolute; top:0; left:0; width:100%; height:100%; background-color: rgba(0,0,0,0.5); z-index:1;"></div>
    <div class="container h-100 d-flex flex-column justify-content-center align-items-start position-relative" style="z-index:2;">
        <h1 class="display-4 font-weight-bold animate__animated animate__fadeInDown">💪 Sẵn sàng thay đổi vóc dáng?</h1>
        <p class="lead animate__animated animate__fadeInUp delay-1s">Tham gia tập thử miễn phí ngay hôm nay và trải nghiệm phòng Gym hiện đại cùng huấn luyện viên chuyên nghiệp.</p>

        <div class="d-flex flex-wrap mt-3 animate__animated animate__fadeInUp delay-2s">
            <a class="btn btn-outline-light btn-lg mr-3 mb-2" href="@Url.Action("Index", "Packages")"><i class="fas fa-dumbbell mr-1"></i> Gói Tập</a>
            <a class="btn btn-outline-light btn-lg mr-3 mb-2" href="@Url.Action("Index", "Contact")"><i class="fas fa-envelope mr-1"></i> Liên hệ</a>
            <a class="btn btn-warning btn-lg mb-2" href="@Url.Action("Register", "Trial")"><i class="fas fa-user-plus mr-1"></i> Đăng ký Ngay</a>
        </div>
    </div>

</div>

<!-- Carousel hình ảnh -->
<div class="container mb-5">
    <div id="gymCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#gymCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#gymCarousel" data-slide-to="1"></li>
            <li data-target="#gymCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner rounded shadow">
            <div class="carousel-item active">
                <img src="~/Content/Images/gym6.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Gym 1" />
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/gym7.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Gym 2" />
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/gym8.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Gym 3" />
            </div>
            <div class="carousel-item">
                <img src="~/Content/Images/gym5.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Gym 4" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#gymCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#gymCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>

<!-- Giới thiệu -->
<div class="container text-center mt-5">
    <h2>Vì sao chọn chúng tôi?</h2>
    <p class="text-muted">Phòng gym hiện đại, huấn luyện viên chuyên nghiệp, môi trường thân thiện.</p>
</div>

<!-- Các chức năng -->
<div class="container text-center mt-5">
    <h2>Chức năng chính</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Thành viên</h5>
                    <p class="card-text">Thêm, sửa, xóa và quản lý danh sách thành viên.</p>
                    <a href="@Url.Action("Index", "Member")" class="btn btn-outline-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Huấn luyện viên</h5>
                    <p class="card-text">Quản lý danh sách các huấn luyện viên chuyên nghiệp.</p>
                    <a href="@Url.Action("Index", "Trainer")" class="btn btn-outline-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Gói tập</h5>
                    <p class="card-text">Tạo và chỉnh sửa các gói tập phù hợp với từng người dùng.</p>
                    <a href="@Url.Action("Index", "Packages")" class="btn btn-outline-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Liên hệ -->
<div class="container mt-5">
    <h2 class="text-center">Liên hệ với chúng tôi</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center mt-3">@TempData["Success"]</div>
    }

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <form method="post" action="@Url.Action("Send", "Contact")">
                <div class="form-group">
                    <label for="Name">Họ và tên</label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" required />
                </div>
                <div class="form-group">
                    <label for="Message">Nội dung</label>
                    <textarea class="form-control" id="Message" name="Message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Gửi liên hệ</button>
            </form>
        </div>
    </div>
</div>

<!-- Chân trang -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <div class="container">
        <p class="mb-1">&copy; 2025 Phòng Gym KhoaPug. All rights reserved.</p>
        <p class="mb-0">
            <i class="fas fa-map-marker-alt mr-2"></i> 123 Đường Gym, Quận Liên Chiểu, Đà Nẵng |
            <i class="fas fa-phone-alt ml-3 mr-2"></i> 0909 999 999 |
            <i class="fas fa-envelope ml-3 mr-2"></i> info@gymdanang.vn
        </p>
    </div>
</footer>
