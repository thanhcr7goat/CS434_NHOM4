@model GymManagement.Models.User

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center mb-4">Đăng ký</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(u => u.FullName)
            @Html.TextBoxFor(u => u.FullName, new { @class = "form-control", placeholder = "Họ và tên" })
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Email)
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", placeholder = "Email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password)
            @Html.PasswordFor(u => u.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
        </div>

        <button type="submit" class="btn btn-success btn-block">Đăng ký</button>
    }
</div>
